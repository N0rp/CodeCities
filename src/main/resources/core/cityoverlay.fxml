<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.text.Text?>
<fx:root type="javafx.scene.layout.VBox"
          xmlns:fx="http://javafx.com/fxml">
    <HBox>
        <Text text="Size: "/>
        <ChoiceBox fx:id="sizeMetric"/>


        <Text text="Height: "/>
        <ChoiceBox fx:id="heightMetric"/>


        <Text text="Color: "/>
        <ChoiceBox fx:id="colorMetric"/>
    </HBox>
    <HBox>
        <Text text="Name="/>
        <Text fx:id="buildingName"/>

        <Text text=" Size="/>
        <Text fx:id="buildingSize"/>


        <Text text=" Height="/>
        <Text fx:id="buildingHeight"/>


        <Text text=" Color="/>
        <Text fx:id="buildingColor"/>
    </HBox>
</fx:root>